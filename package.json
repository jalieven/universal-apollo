{
	"name": "flush-requires-boilerplate-webpack-chunknames",
	"description": "A boilerplate showing how to achieve Universal Code-Splitting and Universal HMR with Webpack 4, react-universal-component, webpack-flush-chunks and extract-css-chunks-webpack-plugin",
	"version": "3.0.0",
	"main": "server/index.js",
	"author": "James Gillmore <james@faceyspacey.com>",
	"contributors": [
		"Zackary Jackson <zackary.l.jackson@gmail.com> (https://github.com/ScriptedAlchemy)"
	],
	"license": "MIT",
	"scripts": {
		"start": "npm run clean && cross-env NODE_ENV=development node server/index.js",
		"start:prod": "npm run clean && cross-env NODE_ENV=production node server/index.js",
		"format": "prettier --single-quote --semi=false --write '{src,server,webpack}/**/*.js' && eslint --fix src server webpack",
		"clean": "rimraf buildClient buildServer",
		"precommit": "lint-staged",
		"cm": "git-cz"
	},
	"dependencies": {
		"apicache": "1.2.3",
		"apollo-boost": "0.1.27",
		"colors": "1.3.3",
		"compression": "1.7.3",
		"emotion": "9.2.12",
		"emotion-server": "9.2.12",
		"emotion-theming": "9.2.9",
		"express": "4.16.4",
		"express-no-favicons": "0.0.1",
		"express-request-language": "1.1.15",
		"extract-css-chunks-webpack-plugin": "3.3.2",
		"graphql": "14.1.1",
		"graphql-tag": "2.10.1",
		"history": "4.7.2",
		"lodash": "4.17.11",
		"node-fetch": "2.3.0",
		"prop-types": "15.6.2",
		"react": "16.7.0",
		"react-apollo": "2.4.1",
		"react-dom": "16.7.0",
		"react-emotion": "9.2.12",
		"react-helmet": "5.2.0",
		"react-intl": "2.8.0",
		"react-router": "4.3.1",
		"react-router-dom": "4.3.1",
		"react-spring": "^7.2.10",
		"react-universal-component": "3.0.3",
		"webpack-dev-middleware": "3.5.1",
		"webpack-flush-chunks": "2.0.3"
	},
	"devDependencies": {
		"babel-cli": "6.26.0",
		"babel-core": "6.26.3",
		"babel-eslint": "10.0.1",
		"babel-loader": "7.1.5",
		"babel-plugin-emotion": "10.0.6",
		"babel-plugin-react-intl": "3.0.1",
		"babel-plugin-universal-import": "4.0.0",
		"babel-preset-es2015": "6.24.1",
		"babel-preset-react": "6.24.1",
		"babel-preset-stage-2": "6.24.1",
		"babel-watch": "2.0.8",
		"commitizen": "3.0.5",
		"cross-env": "5.2.0",
		"css-loader": "1.0.1",
		"cz-conventional-changelog": "2.1.0",
		"eslint": "5.13.0",
		"eslint-config-airbnb": "17.1.0",
		"eslint-plugin-flowtype": "3.2.1",
		"eslint-plugin-import": "2.16.0",
		"eslint-plugin-jsx-a11y": "6.2.0",
		"eslint-plugin-react": "7.12.4",
		"husky": "1.3.1",
		"lint-staged": "8.1.1",
		"offline-plugin": "5.0.6",
		"poststylus": "1.0.0",
		"prettier": "1.16.3",
		"pretty-quick": "1.10.0",
		"react-hot-loader": "4.6.5",
		"rimraf": "2.6.3",
		"stylus": "0.54.5",
		"stylus-loader": "3.0.2",
		"webpack": "4.29.0",
		"webpack-hot-middleware": "2.24.3",
		"webpack-hot-server-middleware": "0.5.0",
		"write-file-webpack-plugin": "4.5.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"lint-staged": {
		"linters": {
			"*.js": [
				"pretty-quick --staged",
				"eslint --fix",
				"git add"
			]
		}
	}
}
