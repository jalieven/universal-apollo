{
	"presets": ["react", "stage-2"],
	"plugins": [
		[
			"emotion",
			{
				"sourceMap": true,
				"autoLabel": true,
				"labelFormat": "[local]",
				"cssPropOptimization": true
			}
		],
		[
			"react-intl",
			{
				"messagesDir": "messages"
			}
		],
		"universal-import"
	],
	"env": {
		"development": {
			"plugins": ["react-hot-loader/babel"]
		}
	}
}
